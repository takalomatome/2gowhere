# Discord/Slack Webhook for instant booking notifications
BOOKING_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_URL

# SMTP Configuration for sending booking emails (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Booking notification emails (where bookings are sent)
ADMIN_EMAIL=bookings@2gowhere.com
CONTACT_EMAIL=takalomatome@gmail.com
ATTRACTIONS_EMAIL=attractions@2gowhere.com
HOTELS_EMAIL=hotels@2gowhere.com
CARS_EMAIL=cars@2gowhere.com
FLIGHTS_EMAIL=flights@2gowhere.com
RIDES_EMAIL=rides@2gowhere.com

# Provider phone numbers for instant SMS alerts (optional)
HOTEL_PHONE=+27821234567
ATTRACTION_PHONE=+27821234568
CAR_PHONE=+27821234569
FLIGHT_PHONE=+27821234570

# SMS Notifications (Africa's Talking or Twilio)
# Get API key from https://africastalking.com or https://twilio.com
SMS_API_KEY=
SMS_USERNAME=sandbox
SMS_SENDER_ID=2goWhere

# WhatsApp Business API (optional for instant ride alerts)
WHATSAPP_API_KEY=
WHATSAPP_PHONE_NUMBER=

# Ride Service Integration (Uber/Bolt API or local driver network)
RIDE_API_KEY=
RIDE_API_ENDPOINT=https://api.ride-service.com/v1/dispatch

# Crime Monitor Integration
# Use a real crime data provider (e.g., Crimeometer, SpotCrime, local Gov Open Data)
# Example (Crimeometer): https://www.crimeometer.com/developers
CRIME_API_KEY=
CRIME_API_ENDPOINT=https://api.crime-service.com/v1/incidents/search
CRIME_CACHE_MINUTES=30

# Authentication
# Secret key for signing OTP tokens and session JWTs. Generate a strong random value.
AUTH_SECRET=change_this_to_a_long_random_string
# In development you can set this to true to return OTP codes in responses for easier testing.
DEMO_SHOW_OTP=true

# Supabase (optional persistent user store)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Legal & Versioning
TERMS_VERSION=1.0
PRIVACY_VERSION=1.0
